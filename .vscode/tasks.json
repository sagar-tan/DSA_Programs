{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-and-compile",
      "type": "shell",
      "command": "c++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
